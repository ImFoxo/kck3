@model Biblioteka.Models.AdminSettings

@{
    ViewData["Title"] = "Edycja";
}

<h1>Edytuj</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="adminSettingsId" />
            <div class="form-group">
                <label asp-for="limitTaken" class="control-label"></label>
                <input asp-for="limitTaken" class="form-control" />
                <span asp-validation-for="limitTaken" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="limitWaiting" class="control-label"></label>
                <input asp-for="limitWaiting" class="form-control" />
                <span asp-validation-for="limitWaiting" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="limitTimeTaken" class="control-label"></label>
                <input asp-for="limitTimeTaken" class="form-control" />
                <span asp-validation-for="limitTimeTaken" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="limitTimeWaiting" class="control-label"></label>
                <input asp-for="limitTimeWaiting" class="form-control" />
                <span asp-validation-for="limitTimeWaiting" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Zapisz" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Powrót</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
