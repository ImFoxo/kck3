                <div class="col-md-4">
                    <select id="select-to" class="contacts" placeholder="Szukaj..."></select>
                </div>
                <div class="col-md-1">
                    <a href="#" id="Search" class="btn btn-dark" onclick="submitSearchForm()">Szukaj</a>
